<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_bg"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Header: Date and Theme Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_date_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monday"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/widget_date_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oct 24, 2026"
                android:textColor="#CBD5E1"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/widget_theme_btn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:src="@android:drawable/ic_menu_gallery"
            android:tint="#FFFFFF"
            android:contentDescription="Change Theme" />
            
        <ImageView
            android:id="@+id/widget_refresh"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:src="@android:drawable/ic_menu_rotate"
            android:tint="#FFFFFF"
            android:contentDescription="Refresh" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Timer Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/widget_bg"
            android:backgroundTint="#20FFFFFF"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginBottom="8dp">

            <Chronometer
                android:id="@+id/widget_timer_chronometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" 
                android:format="%s"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/widget_btn_play"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="4dp"
                    android:src="@android:drawable/ic_media_play"
                    android:tint="#4ADE80" />

                <ImageView
                    android:id="@+id/widget_btn_pause"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="16dp"
                    android:padding="4dp"
                    android:src="@android:drawable/ic_media_pause"
                    android:tint="#FACC15" />

                <ImageView
                    android:id="@+id/widget_btn_reset"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="16dp"
                    android:padding="4dp"
                    android:src="@android:drawable/ic_menu_revert"
                    android:tint="#F87171" />
            </LinearLayout>
        </LinearLayout>
        
        <!-- List Header -->
        <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Upcoming"
             android:textSize="10sp"
             android:textColor="#94A3B8"
             android:layout_marginBottom="4dp"/>

        <ListView
            android:id="@+id/widget_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="#00000000"
            android:dividerHeight="4dp" />
            
        <TextView
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="No tasks"
            android:textColor="#AAFFFFFF"
            android:textSize="12sp"
            android:visibility="gone" />
            
    </LinearLayout>

</LinearLayout>
